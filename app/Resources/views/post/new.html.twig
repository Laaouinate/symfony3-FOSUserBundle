{% extends 'back.html.twig' %}

{% block content %}
    <h3>Nouveau post</h3>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.slug, {'attr': {'class': 'form-control'}}) }}
            </div>
                  
            <div class="form-group">
                {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.body, {'attr': {'class': 'form-control'}}) }}
            </div>

        </div>
        <div class="col-md-4">

            <div class="form-group">
                {{ form_row(form.image, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.datepublish, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.categories, {'attr': {'class': 'form-control'}}) }}
            </div>

            <input class="btn btn-primary" type="submit" value="Enregister" />
            <a class="btn btn-secondary" href="{{ path('admin_post_index') }}">Retour</a>


        </div>
    </div>

    {{ form_end(form) }}


{% endblock %}

{% block breadcrum %} 


    <nav aria-label="breadcrumb">
         <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
              <li class="breadcrumb-item"><a href="#">Liste des posts</a></li>
              <li class="breadcrumb-item active" aria-current="page">Nouveau post</li>

         </ol>
    </nav>

{% endblock %}
