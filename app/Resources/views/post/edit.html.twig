{% extends 'back.html.twig' %}

{% block content %}
    <h3>{{ post.title }}</h3>

    {{ form_start(edit_form) }}

    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                {{ form_row(edit_form.title, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(edit_form.slug, {'attr': {'class': 'form-control'}}) }}
            </div>
                  
            <div class="form-group">
                {{ form_row(edit_form.description, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(edit_form.body, {'attr': {'class': 'form-control'}}) }}
            </div>

        </div>
        <div class="col-md-4">

            <div class="form-group">
                {{ form_row(edit_form.image, {'required':false,'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(edit_form.datepublish, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(edit_form.categories, {'attr': {'class': 'form-control'}}) }}
            </div>

            <input class="btn btn-danger" type="submit" value="Modifer" />
            <a class="btn btn-secondary" href="{{ path('admin_post_index') }}">Retour</a>


        </div>
    </div>

    {{ form_end(edit_form) }}


{% endblock %}

{% block breadcrum %} 


    <nav aria-label="breadcrumb">
         <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
              <li class="breadcrumb-item"><a href="#">Liste des posts</a></li>
              <li class="breadcrumb-item active" aria-current="page">{{ post.title }}</li>

         </ol>
    </nav>

{% endblock %}
